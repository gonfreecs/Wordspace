<section>
     <!-- add multipart for upload image -->
<h2><center>Edit <%= resource_name.to_s.humanize %></center></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),   html: { method: :put ,:multipart => true}) do |f| %>
    <%= devise_error_messages! %>
   
<!-- change firstname -->
    <ul class="input-list style-1 clearfix">
    <%= f.label :firstname %><br />
        <%= f.text_field :firstname, autofocus: true %>
        </ul>
        <br> 
     <!-- change last name -->   
<ul class="input-list style-1 clearfix">
    <%= f.label :lastname %><br />
        <%= f.text_field :lastname, autofocus: true %>
</ul>
<br>
 <!-- change gender      -->
 <ul class="input-list style-1 clearfix">     
    <%= f.radio_button(:is_female, true) %><span style="font-weight: bold; font-size: 12pt;"> Female</span>
   
        </ul>
 
  <ul class="input-list style-1 clearfix">
    
   <%= f.radio_button(:is_female, false) %><span style="font-weight: bold; font-size: 12pt;"> Male</span>
      </ul>
    <br>
 
<!-- user write dicription about himself -->
<ul class="input-list style-1 clearfix" >
    <div><%= f.label :about_me %><br />
        <%=  f.text_area :about_me %></div>
</ul>
<br>
<!-- change user picture -->

<ul class="input-list style-1 clearfix" >
    <div> 
    <%= f.label :avatar %>
        <%=  f.file_field :avatar%>
          <%=   f.hidden_field :avatar_cache%></div>

</ul>
<br>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <!-- change password -->
<ul class="input-list style-1 clearfix">
    <div><%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "off" %></div>
</ul>
<br>
<ul class="input-list style-1 clearfix">
    <div><%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %></div>
</ul>
<br>
<!-- check if real account owner   -->
<ul class="input-list style-1 clearfix">
    <div><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off" %></div>
</ul>
<br>

<!--  button to submit -->
 <ul class="input-list style-1 clearfix">
  <div class="actions">
    <%= f.submit "Update" ,:class => 'btn btn-outlined btn-grey', 'data-wow-delay'=>'0.7s' %>
    </div>
    <% end %>
</ul>
<br>
<!--  button to destroy account -->
<ul class="input-list style-1 clearfix">
 <h3>Cancel my account</h3>
  <div class="actions">
    <p>Unhappy?
     <%= button_to "Cancel my account" , registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , :class => 'btn btn-outlined btn-grey', 'data-wow-delay'=>'0.7s'%></p>
    </div>
</ul>
<br>


    </section>
  