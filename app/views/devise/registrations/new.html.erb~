    <!-- /firstname text field--> 

    <!-- lastname text field -->
    <ul class="input-list style-1 clearfix">
          
    <%= f.label :lastname, "Last name" %></center>
    <%= f.text_field :lastname, autofocus: true %>
   
        </ul>

    <br>
     <!-- ./lastname text field --> 

   <!-- gender radio buttons--> 
       <ul class="input-list style-1 clearfix">     
